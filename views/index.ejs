    </script>
    <script type="module" src="/js/title.js"></script>
    <script type="text/javascript" src="/js/cursor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.3/dist/confetti.browser.min.js"></script>

    <script>
      window.addEventListener('DOMContentLoaded', () => {
        const errorPopup = document.querySelector('.popup.error');
        const successful = document.querySelector('.popup.success');

        if (errorPopup) {
          errorPopup.scrollIntoView({ behavior: 'smooth' });
        }


        if (successful) {
          successful.scrollIntoView({ behavior: 'smooth' });

          confetti({
            particleCount: 80,
            angle: 60,
            spread: 80,
            origin: { x: 0, y: 0.9 },
          });
          confetti({
            particleCount: 80,
            angle: 120,
            spread: 80,
            origin: { x: 1, y: 0.9 },
          });

        }
      });
    </script>

