    <script>
      window.addEventListener('DOMContentLoaded', () => {
        const errorPopup = document.querySelector('.popup.error');
        const successful = document.querySelector('.popup.success');

        if (errorPopup) {
          errorPopup.scrollIntoView({ behavior: 'smooth' });
        }


        if (successful) {
          successful.scrollIntoView({ behavior: 'smooth' });

          confetti({
            particleCount: 80,
            angle: 60,
            spread: 80,
            origin: { x: 0, y: 0.9 },
          });
          confetti({
            particleCount: 80,
            angle: 120,
            spread: 80,
            origin: { x: 1, y: 0.9 },
          });

        }
      });
    </script>

